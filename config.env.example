# GitHub App configuration
GITHUB_APP_ID=
GITHUB_APP_INSTALLATION_ID=
GITHUB_APP_PRIVATE_KEY_PATH=

# GitHub organization/repository
GITHUB_ORG=itpplasma
# Leave empty for org-level runners, or specify repo name
GITHUB_REPO=

# Runner configuration
RUNNER_NAMESPACE=arc-runners
RUNNER_SCALE_SET_NAME=plasma-runners
MIN_RUNNERS=0
MAX_RUNNERS=32

# k3d cluster name
K3D_CLUSTER_NAME=arc-cluster

# Cache proxy (registry mirror, apt cache, HTTP proxy)
# Set to false to disable caching proxies
ENABLE_CACHE_PROXY=true

# Custom runner image (with clang, gcc, cmake, etc. pre-installed)
# Default: plasma-runner:latest (built from runner-image/Dockerfile)
# RUNNER_IMAGE=plasma-runner:latest
